{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "name": "Schooltape",
  "version": "3.0.0",
  "description": "Schooltape is a free, open-source, web extension that allows you to customise the look, feel, and functionality of Schoolbox!",
  "homepage_url": "https://github.com/42willow/schooltape",
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "background": {
    "{{chrome}}.service_worker": "src/background.js",
    "{{firefox}}.scripts": ["src/background.js"]
  },
  "{{chrome}}.permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "scripting",
    "webRequest",
    "notifications",
    "background"
  ],
  "{{chrome}}.host_permissions": [
    "<all_urls>"
  ],
  "{{firefox}}.permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "tabs",
    "notifications",
    "webRequest",
    "<all_urls>"
  ],
  "{{chrome}}.web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["*"]
    }
  ],
  "{{firefox}}.web_accessible_resources":  ["*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/scripts/doc-end.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["src/scripts/doc-start.js"],
      "run_at": "document_start"
    }
  ],
  "{{chrome}}.action": {
    "default_popup": "src/options/home/home.html"
  },
  "{{firefox}}.browser_action": {
    "default_popup": "src/options/home/home.html"
  },
  "{{firefox}}.browser_specific_settings": {
    "gecko": {
      "id": "schooltape@schooltape-community.github.io",
      "strict_min_version": "117.0"
    }
  }
}
