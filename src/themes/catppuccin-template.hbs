---
# https://github.com/catppuccin/toolbox/tree/main/whiskers#readme
# ./whiskers-x86_64-unknown-linux-gnu -o catppuccin/<output> catppuccin-template.hbs <flavour>

app: 'Schooltape'
author: '42Willow'
accent: '{{pink}}'
---

a.logo > img {
    content:url("https://raw.githubusercontent.com/catppuccin/catppuccin/main/assets/logos/exports/1544x1544_circle.png");
    max-width: 30%;
}

.material-icons-round, ::placeholder {
    color: {{hsl text}} !important;
}

body, p, h1, h2, h3, h4, .tab-bar {
    color: {{hsl text}};
}

{{!-- date picker (flatpickr) --}}
.adtp .flatpickr-calendar, .adtp .flatpickr-innerContainer {
    border: none;
}

.flatpickr-calendar, .flatpickr-day, span.flatpickr-weekday {
    background: {{hsl base}};
    color: {{hsl text}};
}
.adtp .flatpickr-day.selected, .adtp .flatpickr-day.selected:focus, .adtp .flatpickr-day.selected:hover, .adtp .flatpickr-day.selected.prevMonthDay, .adtp .flatpickr-day.selected.nextMonthDay {
    color: {{hsl base}};
}
.adtp .flatpickr-day.inRange, .adtp .flatpickr-day.prevMonthDay.inRange, .adtp .flatpickr-day.nextMonthDay.inRange, .adtp .flatpickr-day.today.inRange, .adtp .flatpickr-day.prevMonthDay.today.inRange, .adtp .flatpickr-day.nextMonthDay.today.inRange, .adtp .flatpickr-day:hover, .adtp .flatpickr-day:hover, .adtp .flatpickr-day.nextMonthDay:hover, .adtp .flatpickr-day:focus, .adtp .flatpickr-day.prevMonthDay:focus, .adtp .flatpickr-day.nextMonthDay:focus {
    background: {{hsl surface0}};
}
.flatpickr-months .flatpickr-prev-month, .flatpickr-months .flatpickr-next-month {
    fill: {{hsl accent}};
    color: {{hsl accent}};
}
.flatpickr-months .flatpickr-month {
    color: {{hsl accent}};
}
.flatpickr-day.flatpickr-disabled, .flatpickr-day.flatpickr-disabled:hover, .flatpickr-day.prevMonthDay, .flatpickr-day.nextMonthDay, .flatpickr-day.notAllowed, .flatpickr-day.notAllowed.prevMonthDay, .flatpickr-day.notAllowed.nextMonthDay {
    color: {{rgb overlay1}};
}

{{!-- settings/messages --}}
.alert-box, .eotc-status, .alert-box-icon {
    background-color: {{hsl surface0}};
}

{{!-- /groups page buttons --}}
.group-actions[data-v-2e9f597c] {
    background: {{hsl surface0}} !important;
}

{{!-- modals --}}
{{!-- calendar -> event popups --}}
{{!-- confirmation dialogues --}}
.reveal-modal {
    background-color: {{hsl base}};
}
.reveal-modal .close-reveal-modal {
    color: {{hsl accent}};
}
.component-action section {
    background-color: {{hsl surface0}};
}

{{!-- calendar --}}
table {
    background: {{hsl surface0}};
}
table thead {
    background: {{hsl surface1}};
}
.fc .fc-col-header-cell a {
    color: {{hsl text}} !important;
}
table * {
    border: none !important;
}
.fc-toolbar {
    border-bottom: none !important;
}
.fc .fc-col-header-cell.fc-day-today>div, .fc .fc-daygrid-day.fc-day-today {
    background-color: {{hsl surface1}} !important;
}

{{!-- account menu --}}
#account-content {
    overflow: hidden;
}
.account-menu-mobile .separator, .account-drop .separator {
    color: {{hsl accent}};
}

{{!-- side nav / news -> right hand side --}}
.side-nav {
    background-color: {{hsl surface0}};
}
.side-nav li a:not(.button):not(.adtp-btn):not(button):not([type=submit]):not(a.submit):not(button.submit):not(.show-ckeditor-button):hover, .side-nav li a:not(.button):not(.adtp-btn):not(button):not([type=submit]):not(a.submit):not(button.submit):not(.show-ckeditor-button):focus {
    color: {{hsla (opacity accent 0.7)}};
}

{{!-- notifications --}}
.right-off-canvas-menu ul.off-canvas-list label, .right-small a[data-unread]:not([data-unread="0"]), #msgs[data-unread]:not([data-unread="0"]) #right-menu-dock {
    background-color: {{hsl red}};
    color: {{hsl base}};
}

{{!-- drop down menus --}}
#component-layout {
    --left-head-bg: {{hsl accent}} !important;
    --right-head-bg: {{hsl accent}} !important;
    --top-head-bg: {{hsl accent}} !important;
    --top-head-font: {{hsl base}} !important;
    --left-head-font: {{hsl base}} !important;
    --right-head-font: {{hsl base}} !important;
    --top-bg-primary: {{hsl base}} !important;
    --left-bg-primary: {{hsl surface1}} !important;
    --right-bg-primary: {{hsl surface0}} !important;
    --left-font-primary: {{hsl text}} !important;
}

{{!-- three dot menu --}}
#tab-control .separator {
    background-color: {{hsl surface1}};
}

{{!-- form borders --}}
input:focus, textarea:focus, select:focus, input:not([type]):focus, input[type=text]:focus, input[type=password]:focus, input[type=date]:focus, input[type=datetime]:focus, input[type=datetime-local]:focus, input[type=month]:focus, input[type=week]:focus, input[type=email]:focus, input[type=number]:focus, input[type=search]:focus, input[type=tel]:focus, input[type=time]:focus, input[type=url]:focus, input[type=color]:focus, textarea:focus, .ck.ck-content.ck-editor__editable.ck-focused, .ck.ck-editor__main .ck-source-editing-area textarea:focus {
    border-color: {{hsl accent}} !important;
}

{{!-- submit buttons --}}
[type=submit]:hover, .flex-list.buttons a.submit:hover, .flex-list.buttons button.submit:hover, a.submit:hover, button.submit:hover, [type=submit]:focus, .flex-list.buttons a.submit:focus, .flex-list.buttons button.submit:focus, a.submit:focus, button.submit:focus {
    background-color: {{hsla (opacity accent 0.8)}};
}

{{!-- form inputs --}}
.selectize-input, .selectize-control.single .selectize-input.input-active {
    background: {{hsl surface0}};
}

{{!-- dropdowns --}}
.selectize-dropdown {
    background: {{hsl surface1}};
    color: {{hsl text}};
}
select {
    background-color: {{hsl base}};
    color: {{hsl text}};
}

{{!-- attach buttons --}}
.dzone {
    background: none !important;
}

{{!-- labels --}}
label {
    color: {{hsl text}};
}

{{!-- boxes --}}
.editPanel.socialstream-new-post, .content, .information-lis, .empty-state, .empty-state-flex-centered, .card, .show-ckeditor-button, .v-card {
    background-color: {{hsl surface0}};
}

{{!-- iframes --}}
{{!-- since iframes can't be styled, due to cross-origin restrictions - we must force a light background --}}
section.content:has(iframe) {
    background: #eff1f5 !important; {{!-- latte base --}}
}

{{!-- calendar --}}
.fc-list-table {
    background-color: {{hsl surface0}} !important;
}
table tr th, table tr td {
    color: {{hsl text}} !important;
}
.fc .fc-cell-shaded {
    background-color: {{hsl surface1}} !important;
}
.fc-theme-standard tbody {
    border: none !important;
}

{{!-- news articles --}}
.island span[style]:not(a > span[style]):not(.tile > span[style]):not(.event-container > span[style]) {
    color: {{hsl text}} !important;
    background-color: rgba(0,0,0,0) !important;
}
.island a > span[style] {
    color: {{hsl accent}} !important;
    background-color: rgba(0,0,0,0) !important;
}
.island section {
    background-color: {{hsl base}} !important;
}

{{!-- home -> news --}}
.tabs {
    background: {{hsl surface1}};
    border-bottom: none;
}
.tabs dd > a, .tabs .tab-title > a {
    color: {{hsl text}};
}


.information-list, .action-list > .actions-small-1 {
    background-color: {{hsl surface0}} !important;
}

{{!-- timetable --}}
.timetable th, .timetable-small th, .timetable td, .timetable-small td {
    background-color: {{hsl surface0}};
}
.timetable a, .timetable-small a {
    color: #0066b0;
}
.timetable span, .timetable-small span {
    color: {{hsl overlay0}};
}

.timetable div, .timetable-small div {
    color: {{hsl base}};
}

{{#if isDark}}
.timetable div.timetable-subject > div, .timetable-small div.timetable-subject > div {
    color: {{hsl base}};
}
{{/if}}
.timetable-day-active {
    background-color: {{hsl surface1}} !important;
}

{{!-- breadcrumbs --}}
.breadcrumb li.active span:not([href]) {
    color: {{hsl accent}};
}

{{!-- scrollbars --}}
.scrollable::-webkit-scrollbar, #container::-webkit-scrollbar, .left-off-canvas-menu::-webkit-scrollbar, .right-off-canvas-menu::-webkit-scrollbar, .hybrid-bar .account-drop::-webkit-scrollbar {
    background-color: {{hsl crust}};
    width: 8px;
    height: 8px;
}
.scrollable::-webkit-scrollbar-thumb, #container::-webkit-scrollbar-thumb, .left-off-canvas-menu::-webkit-scrollbar-thumb, .right-off-canvas-menu::-webkit-scrollbar-thumb, .hybrid-bar .account-drop::-webkit-scrollbar-thumb {
    background: {{hsla (opacity accent 0.5)}};
}
.scrollable:hover::-webkit-scrollbar-thumb, #container:hover::-webkit-scrollbar-thumb, .left-off-canvas-menu:hover::-webkit-scrollbar-thumb, .right-off-canvas-menu:hover::-webkit-scrollbar-thumb, .hybrid-bar .account-drop:hover::-webkit-scrollbar-thumb {
    background: {{hsl accent}};
}
.scrollable::-webkit-scrollbar-track, #container::-webkit-scrollbar-track, .left-off-canvas-menu::-webkit-scrollbar-track, .right-off-canvas-menu::-webkit-scrollbar-track, .hybrid-bar .account-drop::-webkit-scrollbar-track {
    background: {{hsl crust}};
}

{{!-- news icon --}}
.icon-news::before {
    color: {{hsl text}};
}

{{!-- text inputs --}}
input:not([type]), input[type=text], input[type=password], input[type=date], input[type=datetime], input[type=datetime-local], input[type=month], input[type=week], input[type=email], input[type=number], input[type=search], input[type=tel], input[type=time], input[type=url], input[type=color], textarea, input:hover, textarea:hover, select:hover {
    background-color: {{hsl base}};
    color: {{hsl text}};
}

{{!-- error messages --}}
label.error {
    color: {{hsl red}};
}

{{!-- CKEditor --}}
:root {
    --sb-ck-active: {{hsl accent}};
    --sb-ck-active-grey: {{hsl base}};
    --sb-ck-active-highlight: #daedff;
    --sb-ck-button-grid-border: #bbbbbb;
    --sb-ck-disabled: #dddddd;
    --sb-ck-icon-colour: rgb(51, 51, 51);

    /* Overrides of default CK colours */
    --ck-color-base-background: {{hsl surface0}} !important;
    --ck-color-text: {{hsl text}} !important;

    {{!-- skin.css.php --}}

    {{!-- search box --}}
    --foreground-colour: {{hsl surface0}} !important;
    --primary-text-colour: {{hsl text}} !important;
    --navigation-foreground: {{hsl text}};
    --navigation-foreground-contrast: {{hsl crust}};
    --navigation-background: {{hsla mantle}};
    --navigation-background-contrast: {{hsl crust}};
    --navigation-hover: {{hsl surface0}};
    --navigation-hover-contrast: {{hsl crust}};
        --off-canvas-foreground: {{hsl text}};
    .left-off-canvas-menu ul.off-canvas-list li h3, .left-off-canvas-menu ul.off-canvas-list li label .unit-heading, label .left-off-canvas-menu ul.off-canvas-list li .unit-heading, .left-off-canvas-menu ul.off-canvas-list li h4 {
        color: {{hsl text}};
    }
    --off-canvas-background: {{hsl mantle}};
    --off-canvas-hover: {{hsl surface0}};
    --accounts-menu-foreground: {{hsl text}};
    --accounts-menu-background: {{hsl surface2}};
    --accounts-menu-hover: {{hsl overlay1}};
    --content-ui-foreground: {{hsl accent}};
    --content-ui-background: {{hsl surface0}};
    --content-ui-hover: {{hsl surface1}};
    --content-ui-selected: {{hsl surface0}};
    --content-ui-submit-foreground: {{hsl base}};
    --content-ui-submit-background: {{hsl accent}};
    {{!-- highlighting --}}
    --accent-foreground: {{hsl accent}};
    {{!-- NOTE: THIS NEEDS TO BE ACCENT FOR HIGHLIGHTING --}}
    --accent-background: {{hsl base}};
    {{!-- NOTE: THIS NEEDS TO BE BASE FOR HIGHLIGHTING --}}
    --logo-background: {{base}};
    --body-background: {{hsl base}};
    --form-border-color: {{hsla (opacity accent 0.4)}};
    --form-bg-hover-color: {{hsla (opacity accent 0.3)}};
    --form-bg-hover-color-contrast: {{hsl text}};
    --body-foreground: {{hsl text}};
    --body-foreground-h1: {{hsl text}};
}
