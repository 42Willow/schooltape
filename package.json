    "pino": "^9.2.0",
    "postcss": "^8.4.38",
    "prettier": "^3.3.2",
    "prettier-plugin-svelte": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "svelte": "^4.2.18",
    "svelte-check": "^3.8.1",
