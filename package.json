{
  "name": "schooltape",
  "version": "3.0.0-beta.1",
  "author": "42willow",
  "homepage": "https://schooltape.github.io",
  "devDependencies": {
    "@catppuccin/tailwindcss": "^0.1.6",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "autoprefixer": "^10.4.19",
    "ics": "^3.7.6",
